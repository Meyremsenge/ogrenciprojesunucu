# ==============================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ==============================================
# Bu dosya sadece yerel geliştirme ortamı içindir.
# .env.development olarak kaydedilmelidir.
# Production'da bu değerleri kullanmayın!
# ==============================================

# ------------------------------------------
# APPLICATION
# ------------------------------------------
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

APP_NAME="Öğrenci Koçluk Sistemi"
APP_VERSION=1.0.0-dev
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# ------------------------------------------
# SECURITY (Development - Weak on purpose)
# ------------------------------------------
SECRET_KEY=dev-secret-key-change-in-production-immediately
JWT_SECRET_KEY=dev-jwt-secret-key-change-in-production-now
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# CSRF
WTF_CSRF_ENABLED=false

# Session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Password Hashing (Düşük - hızlı testler için)
BCRYPT_LOG_ROUNDS=4

# ------------------------------------------
# CORS (Development - Permissive)
# ------------------------------------------
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173

# ------------------------------------------
# DATABASE - PostgreSQL
# ------------------------------------------
DATABASE_URL=postgresql://postgres:password@localhost:5432/student_coaching_dev
DB_HOST=localhost
DB_PORT=5432
DB_NAME=student_coaching_dev
DB_USER=postgres
DB_PASSWORD=password
DB_SCHEMA=public

# Pool (Development - küçük)
DB_POOL_SIZE=3
DB_POOL_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_POOL_PRE_PING=true

# SQLAlchemy Debug
SQLALCHEMY_ECHO=true
SQLALCHEMY_TRACK_MODIFICATIONS=false
SQLALCHEMY_RECORD_QUERIES=true

# ------------------------------------------
# REDIS
# ------------------------------------------
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_SSL=false

# Cache
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=60
CACHE_KEY_PREFIX=sks_dev:

# ------------------------------------------
# CELERY
# ------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_ALWAYS_EAGER=true

# ------------------------------------------
# EMAIL (Development - Mailhog)
# ------------------------------------------
MAIL_SERVER=localhost
MAIL_PORT=1025
MAIL_USE_TLS=false
MAIL_USE_SSL=false
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@localhost
MAIL_SUPPRESS_SEND=false

# ------------------------------------------
# FILE STORAGE
# ------------------------------------------
STORAGE_TYPE=local
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# ------------------------------------------
# RATE LIMITING (Development - Disabled)
# ------------------------------------------
RATELIMIT_ENABLED=false
RATELIMIT_DEFAULT=1000/minute
RATELIMIT_STORAGE_URL=memory://

# ------------------------------------------
# LOGGING
# ------------------------------------------
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=

# ------------------------------------------
# MONITORING (Development - Disabled)
# ------------------------------------------
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ------------------------------------------
# EXTERNAL SERVICES (Optional)
# ------------------------------------------
YOUTUBE_API_KEY=
ZOOM_API_KEY=
ZOOM_API_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ------------------------------------------
# PAGINATION
# ------------------------------------------
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
