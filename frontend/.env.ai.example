# ============================================================================
# AI FEATURE FLAGS - Environment Configuration
# ============================================================================
# Bu dosya GPT-4.1 API geçişi için gerekli environment variables içerir.
# 
# KULLANIM:
# =========
# 1. Bu dosyayı .env.local olarak kopyalayın
# 2. İstediğiniz değerleri değiştirin
# 3. Uygulamayı yeniden başlatın
#
# NOT: Bu değişkenler frontend-only'dir, backend'e gönderilmez.
# ============================================================================

# -----------------------------------------------------------------------------
# ENVIRONMENT
# -----------------------------------------------------------------------------
# Options: development, staging, production, test
VITE_APP_ENV=development

# -----------------------------------------------------------------------------
# AI MODE
# -----------------------------------------------------------------------------
# Options: disabled, mock, real, hybrid
# - disabled: AI özellikleri tamamen kapalı
# - mock: Simüle edilmiş yanıtlar (API kullanmaz)
# - real: Gerçek GPT-4.1 API
# - hybrid: Real API, hata durumunda mock'a düşer
VITE_AI_MODE=mock

# -----------------------------------------------------------------------------
# AI ENABLED
# -----------------------------------------------------------------------------
# AI özelliklerinin global olarak açık/kapalı olması
VITE_AI_ENABLED=true

# -----------------------------------------------------------------------------
# DEBUG MODE
# -----------------------------------------------------------------------------
# Console'da detaylı AI logları göster
VITE_AI_DEBUG=true

# -----------------------------------------------------------------------------
# FALLBACK TO MOCK
# -----------------------------------------------------------------------------
# API hatalarında mock mode'a düş
VITE_AI_FALLBACK_TO_MOCK=true

# -----------------------------------------------------------------------------
# TRANSITION PHASE
# -----------------------------------------------------------------------------
# Options: preparation, canary, early_adopters, gradual_rollout, full_rollout, stable
# Kontrollü geçiş için mevcut faz
VITE_AI_TRANSITION_PHASE=preparation

# -----------------------------------------------------------------------------
# ROLLOUT PERCENTAGE
# -----------------------------------------------------------------------------
# gradual_rollout fazında kullanılır (0-100)
VITE_AI_ROLLOUT_PERCENTAGE=0

# -----------------------------------------------------------------------------
# AUTO ROLLBACK
# -----------------------------------------------------------------------------
# Hata eşiği aşıldığında otomatik rollback
VITE_AI_AUTO_ROLLBACK=true

# -----------------------------------------------------------------------------
# ERROR THRESHOLD
# -----------------------------------------------------------------------------
# Otomatik rollback için hata oranı eşiği (%)
VITE_AI_ERROR_THRESHOLD=10

# -----------------------------------------------------------------------------
# LATENCY THRESHOLD
# -----------------------------------------------------------------------------
# Uyarı göstermek için latency eşiği (ms)
VITE_AI_LATENCY_THRESHOLD=3000

# -----------------------------------------------------------------------------
# RATE LIMITS
# -----------------------------------------------------------------------------
# Dakika başına maksimum istek
VITE_AI_RATE_LIMIT=30

# Eşzamanlı maksimum istek
VITE_AI_MAX_CONCURRENT=3

# -----------------------------------------------------------------------------
# STREAMING
# -----------------------------------------------------------------------------
# Streaming yanıtları etkinleştir
VITE_AI_STREAMING_ENABLED=true

# Streaming buffer boyutu (karakter)
VITE_AI_STREAMING_BUFFER_SIZE=10

# -----------------------------------------------------------------------------
# ANALYTICS
# -----------------------------------------------------------------------------
# AI kullanım analitiği
VITE_AI_ANALYTICS_ENABLED=false

# -----------------------------------------------------------------------------
# INTERNAL TESTING
# -----------------------------------------------------------------------------
# Internal test kullanıcıları için email domain'leri (virgülle ayrılmış)
VITE_AI_INTERNAL_DOMAINS=@company.com,@test.com

# Beta kullanıcı ID'leri (virgülle ayrılmış)
VITE_AI_BETA_USER_IDS=

# -----------------------------------------------------------------------------
# API ENDPOINTS (Override if needed)
# -----------------------------------------------------------------------------
# AI API base URL (boş bırakılırsa default kullanılır)
# VITE_AI_API_BASE_URL=/api/v1/ai

# Health check endpoint
# VITE_AI_HEALTH_ENDPOINT=/api/v1/ai/health
