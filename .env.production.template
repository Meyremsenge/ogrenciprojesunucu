# =============================================================================
# Öğrenci Koçluk Sistemi - Production Environment Template
# =============================================================================
# BU DOSYAYI .env OLARAK KOPYALAYIN VE DEĞERLERİ DEĞİŞTİRİN!
# ASLA GIT'E COMMİT ETMEYİN!
# =============================================================================

# =============================================================================
# FLASK APPLICATION
# =============================================================================
FLASK_APP=run.py
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-min-32-chars-change-me
APP_NAME="Öğrenci Koçluk Sistemi"

# =============================================================================
# SECURITY
# =============================================================================
# JWT Settings (değiştirin!)
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars-change-me
JWT_ACCESS_TOKEN_EXPIRES=900
JWT_REFRESH_TOKEN_EXPIRES=604800

# CORS
CORS_ORIGINS=https://app.studentcoaching.com,https://admin.studentcoaching.com

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/hour

# =============================================================================
# DATABASE (PostgreSQL)
# =============================================================================
POSTGRES_USER=student_coaching
POSTGRES_PASSWORD=your-secure-db-password-change-me
POSTGRES_DB=student_coaching_prod
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# Connection Pool
SQLALCHEMY_POOL_SIZE=10
SQLALCHEMY_MAX_OVERFLOW=20
SQLALCHEMY_POOL_TIMEOUT=30
SQLALCHEMY_POOL_RECYCLE=1800
SQLALCHEMY_POOL_PRE_PING=true

# =============================================================================
# REDIS
# =============================================================================
REDIS_PASSWORD=your-secure-redis-password-change-me
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0

# Cache Settings
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379/0
CACHE_DEFAULT_TIMEOUT=300

# =============================================================================
# CELERY
# =============================================================================
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/1
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/2
CELERY_CONCURRENCY=4
CELERY_TASK_TIME_LIMIT=1800
CELERY_TASK_SOFT_TIME_LIMIT=1500

# =============================================================================
# GUNICORN
# =============================================================================
GUNICORN_BIND=0.0.0.0:5000
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=gevent
GUNICORN_WORKER_CONNECTIONS=1000
GUNICORN_TIMEOUT=30
GUNICORN_GRACEFUL_TIMEOUT=30
GUNICORN_KEEPALIVE=5
GUNICORN_MAX_REQUESTS=10000
GUNICORN_MAX_REQUESTS_JITTER=1000
GUNICORN_LOG_LEVEL=warning
GUNICORN_PRELOAD=true

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=no-reply@studentcoaching.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# YouTube API
YOUTUBE_API_KEY=your-youtube-api-key

# OpenAI (AI Features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# =============================================================================
# STORAGE
# =============================================================================
# Local Storage
UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=52428800

# S3 (Optional - for cloud storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=student-coaching-uploads
AWS_S3_REGION=eu-central-1

# =============================================================================
# MONITORING
# =============================================================================
# StatsD/Prometheus
STATSD_HOST=statsd
STATSD_PORT=8125
STATSD_PREFIX=student_coaching

# Log Level
LOG_LEVEL=WARNING

# =============================================================================
# SSL/TLS (if terminating at app)
# =============================================================================
SSL_CERT_FILE=/etc/ssl/certs/server.crt
SSL_KEY_FILE=/etc/ssl/private/server.key

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_AI_ENABLED=true
FEATURE_LIVE_SESSIONS_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
