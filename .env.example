# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
FLASK_DEBUG=1
SECRET_KEY=your-super-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/student_coaching
DATABASE_TEST_URL=postgresql://postgres:password@localhost:5432/student_coaching_test

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# =============================================================================
# AI / LLM CONFIGURATION
# =============================================================================

# Provider Selection: mock, openai, gpt41
# - mock: Development/Test - No API key needed
# - openai: Legacy OpenAI provider
# - gpt41: Production GPT-4.1 with circuit breaker
AI_PROVIDER=mock

# OpenAI API Configuration
# WARNING: Never commit real API keys! Use environment variables in production.
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_ORG_ID=org-your-org-id
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30
OPENAI_MAX_RETRIES=3

# AI Rate Limiting
AI_RATE_LIMIT_RPM=60
AI_RATE_LIMIT_TPM=100000
AI_RATE_LIMIT_RPD=10000

# AI Fallback & Circuit Breaker
AI_ENABLE_FALLBACK=true
AI_FALLBACK_PROVIDER=mock
AI_CIRCUIT_FAILURE_THRESHOLD=5
AI_CIRCUIT_SUCCESS_THRESHOLD=2
AI_CIRCUIT_TIMEOUT=60

# AI Cost Controls (USD)
AI_MAX_COST_PER_REQUEST=0.10
AI_MAX_COST_PER_USER_DAILY=1.0
AI_MAX_COST_MONTHLY=100.0

# AI Security
AI_ENABLE_CONTENT_FILTER=true
AI_ENABLE_AUDIT_LOGGING=true

# Mock Provider (Development)
AI_MOCK_DELAY_MIN=0.3
AI_MOCK_DELAY_MAX=1.0
AI_MOCK_SIMULATE_ERRORS=false

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# YouTube API Configuration
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=eu-central-1

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password
MAIL_DEFAULT_SENDER=noreply@studentcoaching.com

# Sentry Configuration (Error Tracking)
SENTRY_DSN=your-sentry-dsn

# Application Configuration
APP_NAME=Student Coaching Platform
APP_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_DEFAULT=200/minute
